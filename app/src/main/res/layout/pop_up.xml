<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUp"
    android:id="@+id/PopUp"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/personal">
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        />


    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:id="@+id/titulo"
        app:animateTextTypeWithoutMistakes="@string/DatosViaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        android:textSize="22sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/line"
        android:baselineAligned="false"
        android:divider="?android:dividerVertical"
        android:showDividers="middle"
        >

        <!--  EMPTY TEXTS  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle"

            >
            <TextView
                android:id="@+id/textDuracion"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/Duracion"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/textVelocPro"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/VelocProm"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/textHrProm"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/RitmoP"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/textBrProm"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/ResPromedio"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/textFatigaProm"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/FatigaPro"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/textMoodProm"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/MoodPro"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <!--  TEXT SHARED PREFERENCES CONTAINERS  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle"
            >
            <TextView
                android:id="@+id/textDuracion2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/textVelocPro2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/textHrProm2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/textBrProm2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/textFatigaProm2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/textMoodProm2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>